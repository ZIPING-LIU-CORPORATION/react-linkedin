{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable" ,"ES6", "ES2022"],    
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    
    "module": "ESNext",
    "declaration": true,
    
		"declarationMap": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "outDir": "lib",
		"declarationDir": "types",
    "jsx": "react",
    "moduleResolution": "Node",   
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "types"
  ]
}
